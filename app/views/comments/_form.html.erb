<%= form_for([@bathroom, @bathroom.comments.build]) do |f| %>
  <% if @bathroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bathroom.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @bathroom.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :your_name %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :cleanliness %>
    <%= f.radio_button :cleanliness, "1" %>
    <%= f.label :cleanliness_1, "Bad" %>
    <%= f.radio_button :cleanliness, "2" %>
    <%= f.label :cleanliness_2, "Average" %>
    <%= f.radio_button :cleanliness, "3" %>
    <%= f.label :cleanliness_3, "Good" %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
